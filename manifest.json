{
  "manifest_version": 3,
  "name": "Book Chapter Tracker",
  "version": "1.0",
  "description": "Store and manage book chapters.",
  "permissions": ["storage", "tabs", "notifications"],
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "utils.js", "storageHandler.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
